{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "skipLibCheck": true,
    "types": ["mocha", "chai", "node"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts",
    "../target/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}