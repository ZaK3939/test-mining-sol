{
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "test": "anchor test",
    "test:basic": "mocha -t 1000000 tests/facility-game.ts --require ts-node/register",
    "test:comprehensive": "mocha -t 1000000 tests/comprehensive-tests.ts --require ts-node/register",
    "test:security": "mocha -t 1000000 tests/security-tests.ts --require ts-node/register",
    "test:performance": "mocha -t 1000000 tests/performance-tests.ts --require ts-node/register",
    "test:unit": "yarn test:basic && yarn test:comprehensive",
    "test:advanced": "yarn test:security && yarn test:performance",
    "test:all": "yarn test:unit && yarn test:advanced"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/spl-token": "^0.4.13"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^4.3.5"
  }
}
