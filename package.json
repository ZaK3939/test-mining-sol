{
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "test": "anchor test",
    "test:unit": "mocha -t 1000000 tests/unit/**/*.test.ts --require ts-node/register",
    "test:integration": "mocha -t 1000000 tests/integration/**/*.test.ts --require ts-node/register",
    "test:security": "mocha -t 1000000 tests/security/**/*.test.ts --require ts-node/register",
    "test:e2e": "mocha -t 1000000 tests/e2e/**/*.test.ts --require ts-node/register",
    "test:all": "yarn test:unit && yarn test:integration && yarn test:security && yarn test:e2e"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.31.1",
    "@solana/spl-token": "^0.4.13"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "mocha": "^9.0.3",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^4.3.5"
  }
}
